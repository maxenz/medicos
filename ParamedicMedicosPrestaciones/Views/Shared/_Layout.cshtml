<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=9,chrome=1">
    <meta name="description" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="~/Content/bootstrap.min.css" rel="stylesheet">
    <link href="~/Content/font-awesome.min.css" rel="stylesheet">
    <title>Paramedic - @ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <!--[if lt IE 9]>
 <script src="~/Scripts/html5shiv.js" type="text/javascript"></script>
 <script src="~/Scripts/respond.min.js" type="text/javascript"></script>
<![endif]-->
</head>
<body>

    @Html.Partial("_Header")
    @RenderBody()

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqwidgets")
    @Scripts.Render("~/bundles/bootstrap")


    @*Cargo diferentes js dependiendo del controlador*@
    @{
        string controladorActual = (string)@ViewContext.RouteData.Values["Controller"];
    }

    @switch (controladorActual)
    {
        case "Medicos":
            @Scripts.Render("~/bundles/main")
            break;
        case "OperativaClientes":
            @Scripts.Render("~/bundles/opClientes");
            break;
    }

    @RenderSection("scripts", required: false)
</body>

</html>
